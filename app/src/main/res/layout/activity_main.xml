<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    >

    <com.hzn.easytableview.EasyTableView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="#44ff00"
        custom:etvBgColor="#ffffff"
        custom:etvRows="4"
        custom:etvLines="8"
        custom:etvMode="fixWidthHeight"
        custom:etvHeaderHColor="#ffb5b5"
        custom:etvHeaderVColor="#ffb5b5"
        custom:etvHeaderHVColor="#ffffff"
        custom:etvOutStrokeCorner="10dp"
        custom:etvOutStrokeSize="1dp"
        custom:etvOutStrokeColor="#ff0000"
        custom:etvStrokeSize="0.5dp"
        custom:etvStrokeColor="#000000"
        />
</RelativeLayout>
