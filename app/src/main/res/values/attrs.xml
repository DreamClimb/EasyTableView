<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EasyTableView">
        <attr name="etvRows" format="integer"/>
        <attr name="etvLines" format="integer"/>
        <attr name="etvBgColor" format="color"/>
        <attr name="etvHeaderHVColor" format="color"/>
        <attr name="etvHeaderHColor" format="color"/>
        <attr name="etvHeaderVColor" format="color"/>
        <attr name="etvStrokeColor" format="color"/>
        <attr name="etvStrokeSize" format="dimension"/>
        <attr name="etvOutStrokeColor" format="color"/>
        <attr name="etvOutStrokeSize" format="dimension"/>
        <attr name="etvOutStrokeCorner" format="dimension"/>
        <attr name="etvMode" format="enum">
            <enum name="normal" value="0"/>
            <enum name="fixWidth" value="1"/>
            <enum name="fixHeight" value="2"/>
            <enum name="fixWidthHeight" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="EasyPathView">
        <attr name="epvFixedWidth" format="integer"/>
        <attr name="epvFixedHeight" format="integer"/>
        <attr name="epvPathString" format="string"/>
        <attr name="epvStrokeColor" format="color"/>
        <attr name="epvStrokeWidth" format="dimension"/>
        <attr name="epvStrokeFixedWidth" format="float"/>
        <attr name="epvStrokeIsRound" format="boolean"/>
        <attr name="epvAnimDurations" format="string"/>
        <attr name="epvAnimMode" format="enum">
            <enum name="together" value="0"/>
            <enum name="separate" value="1"/>
        </attr>
        <attr name="epvState" format="enum">
            <enum name="show" value="0"/>
            <enum name="hide" value="1"/>
        </attr>
        <attr name="epvDynamic" format="boolean"/>
    </declare-styleable>

</resources>